{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Tests",
            "type": "shell",
            "command": "clang",
            "args": [
                "-o", "${workspaceFolder}/exercism/leap/test", 
                "${workspaceFolder}/exercism/leap/test.c", 
                "${workspaceFolder}/exercism/leap/leap.c", 
                "${workspaceFolder}/../Unity/src/unity.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Compiles the Unity test file and runs it."
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/exercism/leap/test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Runs the compiled test binary."
        }
    ]
}
